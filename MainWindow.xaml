<Window x:Class="SeamCarving.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="1000">
    <Grid>
        <Image Height="450" HorizontalAlignment="Left" Margin="0,0,0,-30"
               Name="ImageControl" Stretch="Fill" VerticalAlignment="Top" Width="800">

            <Image.RenderTransform>
                <ScaleTransform x:Name="scale" ScaleX="1.5" ScaleY="1.5"
                            CenterX="0.5" CenterY="0.5" />
            </Image.RenderTransform>

        </Image>
        <Button Content="Choose File" Margin="0,14,10,0" VerticalAlignment="Top" Click="Button_Click" HorizontalAlignment="Right" Width="112"/>
        <Button Content="Gradient" Margin="0,41,10,0" VerticalAlignment="Top" Click="Button_Click_1" HorizontalAlignment="Right" Width="112" RenderTransformOrigin="0.464,-5.308"/>
        <Button Content="Dynamic Heat" Margin="0,68,10,0" RenderTransformOrigin="-0.013,1.361" Click="Button_Click_2" HorizontalAlignment="Right" Width="112" Height="22" VerticalAlignment="Top"/>
        <Button Content="Carve" HorizontalAlignment="Right" Margin="0,95,10,0" VerticalAlignment="Top" Width="112" Click="Button_Click_3"/>

    </Grid>
</Window>
